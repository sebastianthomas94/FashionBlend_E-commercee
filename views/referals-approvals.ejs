<div class="container">
    <h1>Referral Data</h1>
    <table class="table table-striped table-bordered" id="userReferralTable">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>User ID</th>
                <th>Total</th>
                <th>Eligible Credit</th>
                <th>Date</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <%for(let i in data){%>
            <tr>
                <td><%=data[i].name%></td>
                <td><%=data[i].email%></td>
                <td><%=data[i].userPhone%></td>
                <td class="d-inline-block text-truncate" style="max-width: 75px;"><%=data[i].userId%></td>
                <td><%=data[i].total%></td>
                <td><%=data[i].eligibleCredit%></td>
                <td><%=data[i].date.toLocaleDateString()%></td>
                <%if(data[i].status){%>
                <td><span class="badge bg-success"><%=data[i].status%></span></td>
                <%} else {%>
                <td><span class="badge bg-primary">Pending</span></td>
                <%}%>
                <%if(!data[i].status){%>
                <td>
                    <!-- Example single danger button -->
                    <div class="btn-group">
                        <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                            Action
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/admin/referrals/approve/<%=data[i]._id%>">Approve</a>
                            <a class="dropdown-item" href="/admin/referrals/Reject/<%=data[i]._id%>">Reject</a>
                        </div>
                    </div>
                </td>
                <%}else{%>
                    <td>Action Done</td>
                    <%}%>

            </tr>
            <%}%>
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('#userReferralTable').DataTable();
    });
</script>